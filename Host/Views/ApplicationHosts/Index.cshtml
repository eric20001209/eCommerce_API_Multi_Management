@model IEnumerable<Host.Models.ApplicationHost>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TradingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConnectionString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiRoot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TradingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectionString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApiRoot)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HostId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
